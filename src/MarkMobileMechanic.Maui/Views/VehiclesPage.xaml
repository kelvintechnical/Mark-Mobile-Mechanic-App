<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarkMobileMechanic.Maui.Views.VehiclesPage"
             Title="Vehicles">
    <CollectionView ItemsSource="{Binding Vehicles}" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="0,8" Padding="12">
                    <VerticalStackLayout>
                        <Label Text="{Binding Make}" FontAttributes="Bold" />
                        <Label Text="{Binding Model}" />
                        <Label Text="{Binding Year, StringFormat='Year: {0}'}" />
                        <Label Text="{Binding Vin, StringFormat='VIN: {0}'}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
