<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MarkMobileMechanic.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MarkMobileMechanic.Maui.Views">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Services" ContentTemplate="{DataTemplate views:ServicesListPage}" />
        <ShellContent Title="Bookings" ContentTemplate="{DataTemplate views:BookingsPage}" />
        <ShellContent Title="Vehicles" ContentTemplate="{DataTemplate views:VehiclesPage}" />
        <ShellContent Title="Work Orders" ContentTemplate="{DataTemplate views:WorkOrdersPage}" />
    </TabBar>

</Shell>
